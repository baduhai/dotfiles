[colors]
background = #99301C
background-dark = #373737
background-alt = #333
foreground = #fff
foreground-alt = #aaa
primary = #ffb52a
secondary = #e60053
alert = #aaa

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/default]
width = 100%
height = 40
offset-x = 0
offset-y = 0
monitor = eDP-1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = xos4 Terminus:size=14;1
font-1 = siji:size=14;1

modules-left = drun redshift megasync backlight
modules-center = date
modules-right = volume wlan battery powermenubar

tray-position = left
tray-padding = 1
tray-scale = 0

enable-ipc = true

[module/drun]
type = custom/text
content = "    "
click-left = rofi -show drun
content-background = #FF512F

[module/redshift]
type = custom/text
content = "  RDSFT "
