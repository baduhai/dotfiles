[colors]
background = #373737
background-dark = #373737
background-alt = #333
foreground = #fff
foreground-alt = #aaa
primary = #ffb52a
secondary = #e60053
alert = #aaa

[global/wm]
margin-top = 2
margin-bottom = 2

[bar/default]
width = 100%
height = 40
offset-x = 0
offset-y = 0
monitor = eDP1

background = #414141
foreground = ${colors.foreground}

overline-size = 1
overline-color = ${colors.background}
underline-size = 2
underline-color = ${colors.background}

border-top-size = 0
border-top-color = #00ffffff
border-bottom-size = 0
border-bottom-color = #00ffffff
