[module/megasync]
type = custom/text
content = "  MEGA "
click-left = megasync &
content-background = #CC4025 

[module/backlight]
type = internal/xbacklight
format = "<bar>"
format-prefix = "  "
format-prefix-background = #B23820 
format-suffix = " "
format-suffix-background = #B23820
bar-width = 10
bar-indicator = |
bar-indicator-background = #B23820
bar-fill = ─
bar-fill-background = #B23820
bar-empty = ─
bar-empty-background = #B23820

[module/date]
type = internal/date
format = <label>
label = "  %date%  %time% "
label-background = #7F2817
date = %Y-%m-%d
time = %H:%M

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
format-volume-background = #B23820 
label-volume = "%percentage%% "
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
label-muted = " muted "
label-muted-background = #B23820 

[module/wlan]
type = internal/network
interface = wlp58s0
interval = 5
format-connected = "<label-connected> "
format-connected-background = #CC4025
label-connected = %essid%
format-connected-prefix = "  "

[module/battery]
