[colors]
background = #373737
background-dark = #373737
background-alt = #333
foreground = #fff
foreground-alt = #aaa
primary = #ffb52a
secondary = #e60053
alert = #aaa

[global/wm]
margin-top = 2
margin-bottom = 2

[bar/default]
width = 100%
height = 40
offset-x = 0
offset-y = 0
monitor = eDP1

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 1
overline-color = ${colors.background}
underline-size = 2
underline-color = ${colors.background}

border-top-size = 1
border-top-color = #373737
border-bottom-size = 0
border-bottom-color = #333

padding-left = 2
padding-right = 3
module-margin-left = 1
module-margin-right = 1

font-0 = "Fira Mono:size=10;1"
font-1 = "FontAwesome:pixelsize=10;1"

modules-left = i3
modules-center = 
modules-right = volume wlan battery date powermenu

tray-position = center
tray-padding = 1
tray-scale = 0

enable-ipc = true

[module/muunreads]
type = custom/script
interval = 10
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/mu-unreads.sh

[module/compton]
type = custom/script
format-prefix = "CMPTN "
format-prefix-foreground = ${colors.foreground-alt}
exec = ~/.config/polybar/compton.sh
click-left = ~/.config/polybar/compton-toggle.sh
interval = 5

[module/powermenu]
type = custom/menu

label-open = 
label-open-foreground = #ff512f
label-close = " "
label-close-foreground = #ff512f

menu-0-0 = 
menu-0-0-exec = i3-msg exit
menu-0-1 = 
menu-0-1-exec = systemctl suspend
menu-0-2 = 
menu-0-2-exec = reboot
menu-0-3 = " "
menu-0-3-exec = poweroff

menu-0-0-padding = 1
menu-0-1-padding = 1
menu-0-2-padding = 1

[module/memory]
type = internal/memory
interval = 3
format-prefix = "MEM "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp58s0
interval = 3.0
format-connected = <label-connected>
label-connected = %essid% |
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5
time = "%H:%M"
date = "%a %d/%m/%y"
label = %time% %date% |
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-background = ${colors.background}
label-background = ${colors.background}


[module/volume]
type = internal/volume

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%% |

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.foreground-alt}

label-muted =  MUTED
format-muted-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 98

format-charging = <animation-charging> <label-charging> |
format-discharging = <ramp-capacity> <label-discharging> |

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.alert}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.foreground}
animation-charging-framerate = 750

[module/i3]
type = internal/i3
label-focused-foreground = #ff512f
label-unfocused-foreground = ${colors.foreground-alt}
